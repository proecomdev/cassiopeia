{{ 'section-about-us.css' | asset_url | stylesheet_tag }}

<section class="about-us">
  <h1 class="heading-font-family"><span class="font-brown">About</span> <span class="font-choco">Us</span></h1>
  <div class="content">
    <img src="{{ section.settings.quote | img_url: 'master' }}" alt="quote">
    <p>{{ section.settings.content }}</p>
  </div>

  <div class="image_block">
    <div class="d-flex align-center w-100">
      <img src="{{ section.settings.image_1 | img_url: 'master' }}" alt="Image">
      <img src="{{ section.settings.image_2 | img_url: 'master' }}" alt="Image">
      <img src="{{ section.settings.image_3 | img_url: 'master' }}" alt="Image">
      <img src="{{ section.settings.image_4 | img_url: 'master' }}" alt="Image">
      <img src="{{ section.settings.image_5 | img_url: 'master' }}" alt="Image">
    </div>
  </div>
</section>

{% schema %}
{
  "name": "About Us",
  "settings": [
    {
      "type": "image_picker",
      "id": "quote",
      "label": "Quote"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Image 1"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Image 2"
    },
    {
      "type": "image_picker",
      "id": "image_3",
      "label": "Image 3"
    },
    {
      "type": "image_picker",
      "id": "image_4",
      "label": "Image 4"
    },
    {
      "type": "image_picker",
      "id": "image_5",
      "label": "Image 5"
    }
  ],
  "presets": [
    {
      "name": "About Us"
    }
  ]
}
{% endschema %}

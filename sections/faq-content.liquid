{{ 'section-faq.css' | asset_url | stylesheet_tag }}

<div class="page-width--narrow">
  <div class="sub_title">
    <h2 class="heading-font-family font-choco">{{ section.settings.sub_title }}</h2>
  </div>
  {% if section.blocks.size > 0 %}
    {% for block in section.blocks %}
      <div class="faq-item">
        <h3 class="text-font-family font-choco {% if forloop.index == 1 %} active {% endif %}"><i>{{ forloop.index }}/</i> {{ block.settings.faq_title }}</h3>
        <p class="text-font-family font-brown">{{ block.settings.faq_content }}</p>
      </div>
    {% endfor %}
  {% endif %}
</div>

{% schema %}
  {
    "name": "Faqs Content",
    "settings": [
      {
        "type": "text",
        "id": "sub_title",
        "label": "Description"
      }
    ],
    "blocks": [
      {
        "type": "faq",
        "name": "faq",
        "settings": [
          {
            "type": "text",
            "id": "faq_title",
            "label": "Faq Title"
          },
          {
            "type": "text",
            "id": "faq_content",
            "label": "Faq Title"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Faqs Content"
      }
    ]
  }
{% endschema %}
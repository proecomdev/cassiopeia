      {%- assign linklist = linklists[block.settings.link_item] -%}
      <div class="Collapse__Inner">
        <h2 class="Footer_Link__Title">{{ linklist.title | escape }}</h2>
        <ul class="Linklist">
          {%- for link in linklist.links -%}
            <li class="Linklist__Item">
              {% if link.title == "Initiate Return" %}
                <a href="{{ link.url }}" class="Link Link--primary" target="_blank">{{ link.title | escape }}</a>
              {% else %}
                <a href="{{shop.url}}{{ link.url }}" class="Link Link--primary">{{ link.title | escape }}</a>
              {% endif %}
            </li>
          {%- endfor -%}
        </ul>
      </div>
